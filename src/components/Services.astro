---
// src/components/Services.astro

// Um array de objetos para facilitar a adição ou remoção de serviços no futuro
const services = [
  {
    icon: `
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6.429 9.75L2.25 12l4.179 2.25m0-4.5l5.571 3 5.571-3m-11.142 0L2.25 12l4.179 2.25M6.429 9.75L2.25 12l4.179 2.25m11.142 0l-5.571 3-5.571-3" />
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.771 9.75L2.25 12l17.521 2.25" />
      </svg>
    `,
    title: "Desenvolvimento Web",
    description: "Criamos sistemas, APIs e landing pages seguras e performáticas, utilizando as tecnologias mais modernas do mercado."
  },
  {
    icon: `
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 1.5H8.25A2.25 2.25 0 006 3.75v16.5a2.25 2.25 0 002.25 2.25h7.5A2.25 2.25 0 0018 20.25V3.75a2.25 2.25 0 00-2.25-2.25H13.5m-3 0V3h3V1.5m-3 0h3m-3 18.75h3" />
      </svg>
    `,
    title: "Aplicações Mobile",
    description: "Desenvolvemos aplicativos nativos e híbridos para iOS e Android, focados em uma experiência de usuário fluida e intuitiva."
  },
  {
    icon: `
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.286zm0 13.036h3.75" />
      </svg>
    `,
    title: "Consultoria em Segurança",
    description: "Analisamos seus sistemas existentes em busca de vulnerabilidades, fortalecendo sua infraestrutura contra ameaças digitais."
  },
  {
    icon: `
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 6a7.5 7.5 0 100 15 7.5 7.5 0 000-15zM21 21l-5.69-5.69" />
      </svg>
    `,
    title: "Marketing Digital",
    description: "Planejamos e executamos estratégias de marketing digital para aumentar a visibilidade e o alcance do seu software no mercado."
  }
];
---

<section id="servicos" class="py-20 bg-gray-950">
  <div class="max-w-7xl mx-auto px-8">
    <div class="text-center">
      <h2 class="text-4xl font-bold text-gray-100">Nossas Soluções</h2>
      <p class="mt-4 text-lg text-gray-400">Oferecemos um portfólio completo para impulsionar seu projeto.</p>
    </div>

    <div class="mt-16 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {services.map(service => (
        <div class="bg-gray-800 border border-gray-700 rounded-lg p-8 transform transition-transform hover:-translate-y-2">
          <div class="inline-block bg-gray-900 p-3 rounded-md">
            <div class="h-8 w-8 text-red-500" set:html={service.icon} />
          </div>
          <h3 class="mt-6 text-xl font-bold text-gray-100">{service.title}</h3>
          <p class="mt-2 text-gray-400">{service.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>